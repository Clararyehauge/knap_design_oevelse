---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <form>
    <section class="grid grid-cols-1 flex flex-col gap-3 p-30">
      <div>
        <label for="number">Antal:</label>
        <br />
        <input id="number" type="number" class="w-103" />
      </div>

      <div>
        <label for="radio">Levering:</label>
        <br />

        <label for="levering">PostNord</label>
        <input id="levering" name="fav_language" type="radio" />

        <label for="levering1">Afhent selv</label>
        <input id="levering1" name="fav_language" type="radio" />
      </div>

      <div>
        <label for="navn">Navn:</label>
        <br />
        <input id="navn" type="text" class="w-103" />
      </div>

      <div>
        <label for="adresse">Adresse:</label>
        <br />
        <input id="adresse" type="text" class="w-103" />
      </div>

      <div>
        <label for="email">E-mail:</label>
        <br />
        <input id="email" type="email" class="w-103" />
      </div>

      <div>
        <label for="postnummerogby">Postnummer & by:</label>
        <br />
        <input id="postnummerogby" type="text" />
        <input id="postnummerogby1" type="text" />
      </div>

      <div>
        <label for="telefon">Telefon:</label>
        <br />
        <input id="telefon" type="tel" class="w-103" />
      </div>

      <div>
        <label for="checkboks">Ja tak til nyhedsbreve og tilbud</label>
        <input id="checkboks" type="checkbox" />
      </div>

      <div>
        <!-- <label for="submit">Til betaling:</label>
      <input id="submit" type="submit" /> -->
        <Button variant="primary" size="small">Til betaling</Button>
      </div>
    </section>
  </form>

  <section class="text-amber-50">
    <Button variant="primary" size="small">Klik her!</Button>
    <Button variant="primary" size="medium">Klik her!</Button>
    <Button variant="primary" size="large">Klik her!</Button>
    <Button variant="secondary" size="small">Klik her!</Button>
    <Button variant="secondary" size="medium">Klik her!</Button>
    <Button variant="secondary" size="large">Klik her!</Button>
  </section>

  <section class="p-10 space-y-4">
    <p>Link til <Link href="https://www.kea.dk" target="_blank" variant="textlink" size="standard">En anden side</Link></p>
    <p>Link til <Link href="https://www.kea.dk" target="_blank" variant="primary" size="small">En anden side</Link></p>
    <p>Link til <Link href="https://www.kea.dk" target="_blank" variant="primary" size="medium">En anden side</Link></p>
    <p>Link til <Link href="https://www.kea.dk" target="_blank" variant="primary" size="large">En anden side</Link></p>
    <p>Link til <Link href="https://www.kea.dk" target="_blank" variant="secondary" size="small">En anden side</Link></p>
    <p>Link til <Link href="https://www.kea.dk" target="_blank" variant="secondary" size="medium">En anden side</Link></p>
    <p>Link til <Link href="https://www.kea.dk" target="_blank" variant="secondary" size="large">En anden side</Link></p>
  </section>
</MainLayout>
